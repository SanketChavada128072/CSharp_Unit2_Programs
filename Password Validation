using System;

class PasswordValidation
{
    static void Main()
    {
        while (true)
        {
            Console.Write("Enter password: ");
            string pwd = Console.ReadLine();

            if (pwd.Length < 8)
            {
                Console.WriteLine("Need 8+ chars");
                continue;
            }

            bool ok = pwd.Any(char.IsUpper) &&
                      pwd.Any(char.IsLower) &&
                      pwd.Any(char.IsDigit) &&
                      pwd.Any(c => !char.IsLetterOrDigit(c));

            if (ok)
            {
                Console.WriteLine("Valid ");
                break;
            }
            else
            {
                Console.WriteLine("Need Upper, Lower, Digit, Special");
            }
        }
    }
}
