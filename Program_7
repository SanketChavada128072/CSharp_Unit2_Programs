// Lab 6
// Program 7
/*  Write a Program to input age of person and display message as follows -
if age < 12 print you are kid, if age between 12 to 17 print you are teenager
and if age is between 18 to 60 print your are adult and if age > 60 print
 you are senior citizen. */

using System;

public class Program
{
    public static void Main()
    {
        Console.WriteLine("Enter Your Age: ");
        int age = int.Parse(Console.ReadLine());
    
        if (age < 12)
        {
            Console.WriteLine("You are Kid");
        }
        else if (age >= 12 && age <= 17)
        {
            Console.WriteLine("You are teenager");
        }
        else if (age >= 18 && age <= 60)
        {
            Console.WriteLine("You are an Adult");
        }
        else if (age > 60)
        {
            Console.WriteLine("You are an senior citzen");
        }
    }
}
