using System;

class ElectricityBill
{
    static void Main()
    {
        Console.Write("Enter units: ");
        double units = double.Parse(Console.ReadLine());
        double bill = 0;

        if (units <= 100)
            bill = units * 1.5;
        else if (units <= 200)
            bill = 150 + (units - 100) * 2.5;
        else
            bill = 350 + (units - 200) * 4;

        bill += 50;  // Fixed charge

        if (bill > 500)
            bill *= 1.18;  // 18% GST

        Console.WriteLine($"Total Bill: â‚¹{bill:F2}");
    }
}
